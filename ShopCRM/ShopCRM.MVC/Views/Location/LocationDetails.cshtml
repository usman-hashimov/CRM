@model ShopCRM.Domain.Entities.Models.LocationModel

@{
    ViewBag.Title = "View Location";
}

<h2 class="mb-3">Location Details</h2>

<div class="card mt-3">
    <div class="card-header">
        <h3>Location: @Model.Address</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Address: @Model.Address</dt>
        </dl>
        <h4 class="mt-3">Users:</h4>
        <ul class="list-group">
            @if (Model.Users == null)
            {
                <li class="list-group-item">No users yet.</li>
            }
            else
            {
                @foreach (var user in Model.Users)
                {
                    <li class="list-group-item">@user.Name @user.Surname (@user.Email)</li>
                }
            }
        </ul>
        <h4 class="mt-3">Sales:</h4>
        <ul class="list-group">
            @if (Model.Sales == null)
            {
                <li class="list-group-item">No sales yet.</li>
            }
            else
            {
                @foreach (var sale in Model.Sales)
                {
                    <li class="list-group-item">Sale date: @sale.SaleDate - Amount: @sale.TotalAmount</li>
                }
            }
        </ul>
    </div>
    <div class="card-footer">
        <a asp-controller="Location" asp-action="All" class="btn btn-secondary">Back to list</a>
    </div>
</div>