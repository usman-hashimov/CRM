@model ShopCRM.Application.UseCases.Category.Commands.UpdateCategoryCommand

<h2>Edit category</h2>

@if (Model is null)
{
    <h3>Category not found! 404</h3>
}
else
{
    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name">Address</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        @if (ViewData.ModelState[""]?.Errors.Count > 0)
        {
            <div class="mt-3">
                <div class="alert alert-danger">
                    @ViewData.ModelState[""].Errors[0].ErrorMessage
                </div>
            </div>
        }

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Category" asp-action="All" class="btn btn-secondary">Back to List</a>
            @* <a asp-controller="Location" asp-action="Delete" class="btn btn-danger">Delete</a> *@
        </div>
    </form>
}