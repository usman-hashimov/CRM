@model ShopCRM.Domain.Entities.Models.CategoryModel

@{
    ViewBag.Title = "Category details";
}

<h2 class="mb-3">Category details</h2>

<div class="card mt-3">
    <div class="card-header bg-info text-dark">
        <h3 class="mb-0">Category: "@Model.Name"</h3>
    </div>

    <div class="card-body">
        <h4 class="mb-3">Products:</h4>
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">Price: @product.Price</p>
                            <p class="card-text">Quantity: @product.StockQuantity</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card-footer">
        <a asp-controller="Category" asp-action="All" class="btn btn-secondary btn-sm">Back to list</a>
    </div>
</div>